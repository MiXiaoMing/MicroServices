<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.microservices.data.justbehere.mysql.GoodsOrderMapper">

    <sql id="column">
	  <![CDATA[
		  id, trade_id as tradeID, user_id as userID, delivery_address_id as deliveryAddressID,
		  goods_items as goodsItems,
		  remind, price,
		  status, content, delflag, update_time as updateTime, create_time as createTime
        ]]>
    </sql>


    <insert id="insert" parameterType="com.microservices.common.feignclient.data.justbehere.result.GoodsOrder">
        insert into t_order_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userID != null">
                user_id,
            </if>
            <if test="tradeID != null">
                trade_id,
            </if>
            <if test="deliveryAddressID != null">
                delivery_address_id,
            </if>
            <if test="goodsItems != null">
                goods_items,
            </if>
            <if test="remind != null">
                remind,
            </if>
            <if test="price != null">
                price,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="delflag != null">
                delflag,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="userID != null">
                #{userID,jdbcType=VARCHAR},
            </if>
            <if test="tradeID != null">
                #{tradeID,jdbcType=VARCHAR},
            </if>
            <if test="deliveryAddressID != null">
                #{deliveryAddressID,jdbcType=VARCHAR},
            </if>
            <if test="goodsItems != null">
                #{goodsItems,jdbcType=VARCHAR},
            </if>
            <if test="remind != null">
                #{remind,jdbcType=VARCHAR},
            </if>
            <if test="price != null">
                #{price,jdbcType=FLOAT},
            </if>
            <if test="status != null">
                #{status,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                #{content,jdbcType=VARCHAR},
            </if>
            <if test="delflag != null">
                #{delflag,jdbcType=VARCHAR},
            </if>
            <if test="updateTime != null">
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

    <select id="selectList" parameterType="java.util.Map" resultType="com.microservices.common.feignclient.data.justbehere.result.GoodsOrder">
        select
        <include refid="column"/>
          from t_order_goods
          where
          <![CDATA[
            delflag <> 'D'
          ]]>
          <if test="userID != null">
            and user_id = #{userID,jdbcType=VARCHAR}
          </if>
          <if test="status != null">
            and status = #{status,jdbcType=VARCHAR}
          </if>
    </select>

    <select id="select" parameterType="java.util.Map"
            resultType="com.microservices.common.feignclient.data.justbehere.result.GoodsOrder">
        select
        <include refid="column"/>
        <![CDATA[
          from t_order_goods
          where id = #{id,jdbcType=VARCHAR}
        ]]>
    </select>

    <update id="update" parameterType="java.util.Map">
        update t_order_goods
        <set>
            <if test="status != null">
                status = #{status,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                content = #{content,jdbcType=VARCHAR},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="delflag != null">
                delflag = #{delflag,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

</mapper>