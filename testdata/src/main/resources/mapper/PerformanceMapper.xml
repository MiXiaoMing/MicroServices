<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservices.testdata.mapper.PerformanceMapper">

    <sql id="columns">
		  id, scheme_id as schemeID, cpu_ratio as cpuRatio,
		  memory_size as memorySize, operate_time as operateTime, flag
    </sql>

    <insert id="insertPerformanceBatch" parameterType="map">
        insert into td_performance
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="schemeID != null">
                scheme_id,
            </if>
            <if test="cpuRatio != null">
                cpu_ratio,
            </if>
            <if test="memorySize != null">
                memory_size,
            </if>
            <if test="operateTime != null">
                operate_time,
            </if>
            <if test="flag != null">
                flag,
            </if>
        </trim>
        values
        <foreach collection="performances" item="item" index="index" separator=",">
            (
            #{item.id}, #{item.schemeID}, #{item.cpuRatio},
            #{item.memorySize}, #{item.operateTime}, #{item.flag}
            )
        </foreach >
    </insert>

    <select id="selectPerformancesBySchemeID" resultType="com.microservices.testdata.entity.Performance" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        <![CDATA[
            from td_performance
            where scheme_id = #{schemeID,jdbcType=VARCHAR}
            and flag <> 'D'
        ]]>
    </select>

    <select id="averageCpu" resultType="float" parameterType="java.util.Map">
        select avg(cpu_ratio)
        from td_performance
        where scheme_id = #{schemeID,jdbcType=VARCHAR}
        <![CDATA[
            and flag <> 'D'
        ]]>
    </select>

    <select id="averageMemory" resultType="float" parameterType="java.util.Map">
        select avg(memory_size)
        from td_performance
        where scheme_id = #{schemeID,jdbcType=VARCHAR}
        <![CDATA[
            and flag <> 'D'
        ]]>
    </select>

</mapper>