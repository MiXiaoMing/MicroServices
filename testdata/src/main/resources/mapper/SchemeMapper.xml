<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservices.testdata.mapper.SchemeMapper">

    <sql id="columns">
		  id, app_code as appCode, app_version as appVersion,
		  device_model as deviceModel, system_version as systemVersion,
		  start_time as startTime, end_time as endTime, flag
    </sql>

    <insert id="insertScheme" parameterType="com.microservices.testdata.entity.Scheme">
        insert into td_scheme
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="appCode != null">
                app_code,
            </if>
            <if test="appVersion != null">
                app_version,
            </if>
            <if test="deviceModel != null">
                device_model,
            </if>
            <if test="systemVersion != null">
                system_version,
            </if>
            <if test="startTime != null">
                start_time,
            </if>
            <if test="endTime != null">
                end_time,
            </if>
            <if test="flag != null">
                flag,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="appCode != null">
                #{appCode,jdbcType=VARCHAR},
            </if>
            <if test="appVersion != null">
                #{appVersion,jdbcType=VARCHAR},
            </if>
            <if test="deviceModel != null">
                #{deviceModel,jdbcType=VARCHAR},
            </if>
            <if test="systemVersion != null">
                #{systemVersion,jdbcType=VARCHAR},
            </if>
            <if test="endTime != null">
                #{endTime,jdbcType=VARCHAR},
            </if>
            <if test="startTime != null">
                #{startTime,jdbcType=VARCHAR},
            </if>
            <if test="flag != null">
                #{flag,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="selectSchemes" resultType="com.microservices.testdata.entity.Scheme" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        from td_scheme
        where
        <if test="appCode != null">
            app_code = #{appCode,jdbcType=VARCHAR} and
        </if>
        <if test="appVersion != null">
            app_version = #{appVersion,jdbcType=VARCHAR} and
        </if>
        <![CDATA[
            flag <> 'D'
        ]]>
    </select>

    <update id="updateScheme" parameterType="com.microservices.testdata.entity.Scheme">
        update td_scheme
        <set>
            <if test="flag != null">
                flag = #{flag,jdbcType=VARCHAR},
            </if>
            <if test="endTime != null">
                end_time = #{endTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

</mapper>