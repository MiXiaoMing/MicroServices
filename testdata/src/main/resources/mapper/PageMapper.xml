<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservices.testdata.mapper.PageMapper">

    <sql id="columns">
		  id, scheme_id as schemeID, page_name as pageName,
		  response_time as responseTime, operate_time as operateTime, flag
    </sql>

    <insert id="insertPageBatch" parameterType="map">
        insert into td_page
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="schemeID != null">
                scheme_id,
            </if>
            <if test="pageName != null">
                page_name,
            </if>
            <if test="responseTime != null">
                response_time,
            </if>
            <if test="operateTime != null">
                operate_time,
            </if>
            <if test="flag != null">
                flag,
            </if>
        </trim>
        values
        <foreach collection="pages" item="page" index="index" separator=",">
          (
            #{page.id}, #{page.schemeID}, #{page.pageName},
            #{page.responseTime}, #{page.operateTime}, #{page.flag}
          )
        </foreach >
    </insert>

    <select id="selectPagesBySchemeID" resultType="com.microservices.testdata.entity.Page" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        <![CDATA[
            from td_page
            where scheme_id = #{schemeID,jdbcType=VARCHAR}
            and flag <> 'D'
        ]]>
    </select>

    <select id="averageTime" resultType="float" parameterType="java.util.Map">
        select avg(response_time)
        from td_page
        where scheme_id = #{schemeID,jdbcType=VARCHAR}
        <![CDATA[
            and flag <> 'D'
        ]]>
    </select>
</mapper>