<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservices.testdata.mapper.CodeMapper">

    <sql id="columns">
		  id, code, `type`, nick, `desc`, flag
    </sql>

    <select id="selectPlatformCodeByNick" resultType="com.microservices.testdata.entity.Code" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        <![CDATA[
            from td_code
            where nick = #{nick,jdbcType=VARCHAR}
            and `type` = #{type,jdbcType=VARCHAR}
            and flag <> 'D'
        ]]>
    </select>

</mapper>