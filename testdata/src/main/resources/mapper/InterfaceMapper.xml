<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservices.testdata.mapper.InterfaceMapper">

    <sql id="columns">
		  id, scheme_id as schemeID, url,
		  response_time as responseTime, operate_time as operateTime, flag
    </sql>

    <insert id="insertInterfaceBatch" parameterType="map">
        insert into td_interface
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="schemeID != null">
                scheme_id,
            </if>
            <if test="url != null">
                url,
            </if>
            <if test="responseTime != null">
                response_time,
            </if>
            <if test="operateTime != null">
                operate_time,
            </if>
            <if test="flag != null">
                flag,
            </if>
        </trim>
        values
        <foreach collection="interfaces" item="interface" index="index" separator=",">
            (
            #{interface.id}, #{interface.schemeID}, #{interface.url},
            #{interface.responseTime}, #{interface.operateTime}, #{interface.flag}
            )
        </foreach >
    </insert>

    <select id="selectInterfacesBySchemeID" resultType="com.microservices.testdata.entity.Interface" parameterType="java.util.Map">
        select
        <include refid="columns"/>
        <![CDATA[
            from td_interface
            where scheme_id = #{schemeID,jdbcType=VARCHAR}
            and flag <> 'D'
        ]]>
    </select>

    <select id="averageTime" resultType="float" parameterType="java.util.Map">
        select avg(response_time)
        from td_interface
        where scheme_id = #{schemeID,jdbcType=VARCHAR}
        <![CDATA[
            and flag <> 'D'
        ]]>
    </select>

</mapper>